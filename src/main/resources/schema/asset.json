{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "asset": {
      "type": "object",
      "description": "Assets held by employee",
      "$id": "#asset",
      "properties": {
        "id": {
          "description": "The unique identifier for a Asset",
          "type": "integer"
        },
        "name": {
          "description": "Name of the Asset",
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ]
    }
  }
}